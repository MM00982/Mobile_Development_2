<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/bg_gray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp">

        <!-- Кнопка Назад и Заголовок -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_white_card"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Москва"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_white_card"
            android:paddingStart="16dp"
            android:paddingTop="6dp"
            android:paddingEnd="16dp"
            android:paddingBottom="6dp"
            android:text="Сегодня"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCityTitle" />

        <!-- Иконка погоды (ДИНАМИЧЕСКАЯ) -->
        <ImageView
            android:id="@+id/ivBigSun"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_sun_yellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDate" />

        <!-- Температура -->
        <TextView
            android:id="@+id/tvTempBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="20.0°"
            android:textColor="@color/black"
            android:textSize="80sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivBigSun" />

        <TextView
            android:id="@+id/tvCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Ясно"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTempBig" />

        <!-- Детали (Влага, Осадки, Ветер) - НОВЫЕ ИКОНКИ -->
        <LinearLayout
            android:id="@+id/layoutDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tvCondition">

            <!-- Влажность -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_card"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_drop"/>
                <TextView android:id="@+id/tvHum" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="65%" android:textStyle="bold" android:layout_marginTop="4dp"/>
                <TextView android:text="Влага" android:textSize="10sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Осадки -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_card"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_rain"/>
                <TextView android:id="@+id/tvRain" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="10%" android:textStyle="bold" android:layout_marginTop="4dp"/>
                <TextView android:text="Осадки" android:textSize="10sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Ветер -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_card"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_wind"/>
                <TextView android:id="@+id/tvWind" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4" android:textStyle="bold" android:layout_marginTop="4dp"/>
                <TextView android:text="Ветер" android:textSize="10sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Заголовок: Прогноз на сегодня -->
        <TextView
            android:id="@+id/tvHourlyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:text="Прогноз на сегодня"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutDetails"/>

        <!-- ГОРИЗОНТАЛЬНЫЙ СКРОЛЛ (По часам) -->
        <HorizontalScrollView
            android:id="@+id/scrollHourly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="20dp"
            android:scrollbars="none"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@+id/tvHourlyTitle">

            <LinearLayout
                android:id="@+id/hourlyContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Сюда добавим элементы программно -->
            </LinearLayout>
        </HorizontalScrollView>


        <!-- Заголовок: 5 дней -->
        <TextView
            android:id="@+id/tvForecastTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:text="Следующие 5 дней"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollHourly"/>

        <!-- Список дней -->
        <LinearLayout
            android:id="@+id/forecastContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvForecastTitle">
            <!-- Элементы добавляются программно -->
        </LinearLayout>

        <Button
            android:id="@+id/btnMap"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="#2C2C2C"
            android:text="В избранное"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/forecastContainer"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>