<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <Button
        android:id="@+id/btnTask1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Знакомство (Arguments)" />

    <Button
        android:id="@+id/btnTask2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Fragment Manager (List -> Details)" />

    <Button
        android:id="@+id/btnTask3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Result API (BottomSheet)" />

    <Button
        android:id="@+id/btnTask4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Interface (Callback)" />

</LinearLayout>